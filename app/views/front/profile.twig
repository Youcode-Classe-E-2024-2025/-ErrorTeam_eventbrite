            <div class="max-w-4xl mx-auto bg-gray-800 shadow-lg rounded-lg overflow-hidden">

                <!-- Profile Header/Details Section -->
                <div class="p-8 text-center">
                    <img src="{{ user.avatar ? user.avatar : 'assets/img/default_avatar.png' }}" alt="avatar" class="rounded-full w-32 h-32 border-4 border-gray-700 mx-auto mb-4">

                    <h2 class="text-2xl font-semibold mb-2">{{ user.first_name }} {{ user.last_name }}</h2>
                    <p class="text-gray-400 mb-2"><i class="fas fa-phone"></i> {{ user.phone_number }}</p>
                    <p class="text-gray-400 mb-2"><i class="fas fa-envelope"></i> {{ user.email }}</p>
                    <p class="text-gray-400 mb-4"><i class="fas fa-calendar-alt"></i> Joined: {{ user.created_at }}</p>


